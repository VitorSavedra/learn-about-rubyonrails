<tr>
    <td>
        <%= produto.nome %>
    </td>
    <td>
        <%= produto.descricao %>
    </td>
    <td>
        <%= produto.preco %>
    </td>
    <td>
        <%= produto.departamento_id %>
    </td>
    <td>
        <%= button_to "Remover", produto, method: :delete, class: "btn btn-danger", data: { confirm: "Tem certeza que deseja remover?" } %>
        <%= link_to "Alterar", edit_produto_path(produto), class: "btn btn-info" %>
    </td>
</tr>